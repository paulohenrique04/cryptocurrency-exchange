<%= render "home/navbar" %>

<div class="container mt-4">
  <div class="card mt-4">
    <div class="card-body">
      <h2 class="card-title">Editar Criptomoeda</h2>
      
      <%= form_with(model: @cryptocurrency, local: true) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :name, "Nome da Criptomoeda*", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :company, "Empresa/Organização*", class: "form-label" %>
          <%= f.text_field :company, class: "form-control", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :value, "Valor (R$)*", class: "form-label" %>
          <%= f.number_field :value, step: 0.000001, class: "form-control", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :photo, "Imagem da Criptomoeda*", class: "form-label" %>
          <% if @cryptocurrency.photo.attached? %>
            <div class="mb-2">
              <%= image_tag @cryptocurrency.photo, width: 100, class: "img-thumbnail" %><br />
              <small>Imagem atual</small>
            </div>
          <% end %>
          <%= f.file_field :photo, accept: "image/png, image/jpg, image/jpeg", class: "form-control", required: !@cryptocurrency.photo.attached? %>
          <small class="text-muted">Formatos aceitos: PNG, JPG, JPEG</small>
        </div>

        <div class="form-group mb-3">
          <%= f.label :description, "Descrição", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 3 %>
        </div>

        <div class="d-flex justify-content-between mt-4">
          <%= f.submit "Atualizar Criptomoeda", class: "btn btn-primary" %>
          <%= link_to "Cancelar", cryptocurrencies_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
